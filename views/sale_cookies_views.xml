<?xml version="1.0"?>
<odoo>
    <record id="sale_cookies_action" model="ir.actions.act_window">
        <field name="name">Cookies Sales</field>
        <field name="res_model">sale.cookies</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        Create a new cookie sale
        </p>
        <p>
            Click on the create button to add a new cookie sale.
        </p>
            </field>
    </record>


<!-- List View for sale cookies -->
    <record id="sale_cookies_view_list" model="ir.ui.view">
        <field name="name">sale.cookies.list</field>
        <field name="model">sale.cookies</field>
        <field name="arch" type="xml">
            <list string="Cookies Sales">
                <field name="reference" string="Sale ID"/>
                <field name="name" string="Day"/>
                <field name="client_id" string="Client"/>
                <field name="product" string="Product"/>
                <field name="date_sale" string="Sale Date"/>
                <field name="quantity" string="Quantity"/>
                <field name="unit_price" string="Unit Price"/>
                <field name="total_price" string="Total Price"/>
                <field name="status" string="Status Sale"/>
            </list>
        </field>
    </record>

<!-- Form View for sale cookies -->
    <record id="sale_cookies_view_form" model="ir.ui.view">
        <field name="name">sale.cookies.form</field>
        <field name="model">sale.cookies</field>
        <field name="arch" type="xml">
            <form string="Cookies Sale">
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" placeholder="Sale day" class="mb16"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="date_sale"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description Sale" name="description">
                        <group>
                            <group>
                            <field name="description"/>
                            <field name="product"/>
                            <field name="grams"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            </group>
                        </group>
                        </page>
                        <page string="Payment Info">
                            <group>
                                <field name="total_price"/>
                                <field name="status"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
